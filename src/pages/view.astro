---
import Layout from "../layouts/Layout.astro";
import type { Registration } from '../types';

const response = await fetch('/api/registrations');
const registrations: Registration[] = await response.json();
---

<Layout title="Lista de Registros">
  <main class="bg-gray-100">
    <div class="container mx-auto p-4">
      <h1 class="text-3xl font-bold mb-2">Lista de Matrículas</h1>
      <div class="bg-white shadow-md rounded-lg p-6">
        <ul>
          {registrations.map((registration, index) => (
            <li key={index} class="mb-4">
              <h2 class="text-lg font-semibold">Registro {index + 1}</h2>
              <p>Apoderado: {registration.apoderado.nombres} {registration.apoderado.apellidos}</p>
              <p>Estudiante: {registration.estudiante.nombres} {registration.estudiante.apellidos}</p>
              <!-- Más detalles aquí -->
            </li>
          ))}
        </ul>
      </div>
    </div>
  </main>
</Layout>
